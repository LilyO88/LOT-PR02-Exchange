<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ESTA IDEA ES MUY BUENA, PERO YO NO INCLUIRÍA EN EL ESTILO
    ATRIBUTOS RELACIONADOS CON LA POSICION DE LA VISTA, COMO POR EJEMPLO LOS MÁRGENES.
    EL OBJETIVO DE DEFINIR ESTILOS ES REUSARLOS Y CON EL TAMAÑO VA A SER DIFÍCIL.
    EN CUALQUIER CASO NO USES LITERALES DE CANTIDAD, DEFINE RECURSOS DE DIMENSIÓN -->
    <style name="StyleEditText" parent="Theme.AppCompat.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">end</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLines">1</item>
        <item name="android:digits">.0123456789</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <!-- EMPLEA LOS ATRIBUTOS ...Start EN VEZ DE ...Left Y ...End EN VEZ DE ...Right -->
    <style name="MarginTop" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="MarginBottom" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <!-- ESTOS DOS ESTILOS SON IGUAL. DEFINE SÓLO UNO Y ÚSALO EN VARIOS SITIOS -->
    <style name="MarginsLateral" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="MarginsRButton" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
</resources>
